---
import { roadmap } from '../site.config';
---

<section id="roadmap" class="bg-gradient-to-b from-black via-gray-900 to-black text-white py-20 relative overflow-hidden">
  <!-- Subtle background elements -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 32px 32px;"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 relative">
    <!-- Header Section -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-900/30 rounded-full text-purple-300 text-sm font-medium mb-6">
        üó∫Ô∏è The Journey Ahead
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold mb-8 bg-gradient-to-r from-white via-purple-200 to-blue-200 bg-clip-text text-transparent">
        {roadmap.heading}
      </h2>
      
      <p class="text-xl opacity-90 max-w-4xl mx-auto leading-relaxed mb-12">
        {roadmap.subtitle}
      </p>
      
      <!-- Philosophy & Personal Commitment -->
      <div class="max-w-4xl mx-auto mb-16">
        <div class="relative bg-gray-800/40 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
          <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm font-medium px-4 py-1 rounded-full">
            Personal Commitment
          </div>
          
          <blockquote class="text-lg italic text-center mb-6 text-blue-200 leading-relaxed">
            "{roadmap.philosophy.quote}"
          </blockquote>
          
          <div class="border-t border-gray-600/30 pt-6">
            <p class="text-base opacity-90 leading-relaxed text-center">
              {roadmap.philosophy.commitment}
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Timeline -->
    <div class="relative">
      <!-- Vertical timeline line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-blue-500 via-purple-500 via-green-500 via-yellow-500 to-emerald-500 opacity-30"></div>
      
      <div class="space-y-16">
        {roadmap.phases.map((phase, index) => (
          <div class={`relative grid md:grid-cols-2 gap-8 items-center ${index % 2 === 0 ? '' : 'md:grid-flow-dense'}`}>
            <!-- Timeline dot -->
            <div class="absolute left-1/2 top-8 transform -translate-x-1/2 w-6 h-6 bg-gradient-to-r from-gray-800 to-gray-700 border-4 border-gray-600 rounded-full z-10 md:block hidden"></div>
            
            <!-- Content Card -->
            <div class={`${index % 2 === 0 ? 'md:pr-12' : 'md:pl-12 md:col-start-2'} group`}>
              <div class={`relative bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-sm border border-gray-700/50 rounded-xl p-8 hover:border-${phase.color}-500/50 transition-all duration-500 hover:scale-105`}>
                <!-- Status indicator -->
                <div class={`absolute -top-3 -right-3 px-3 py-1 bg-${phase.status === 'completed' ? 'green' : phase.status === 'in-progress' ? 'blue' : 'gray'}-500/20 border border-${phase.status === 'completed' ? 'green' : phase.status === 'in-progress' ? 'blue' : 'gray'}-500/50 rounded-full text-xs font-medium`}>
                  {phase.status === 'completed' ? '‚úÖ Done' : phase.status === 'in-progress' ? 'üöß Building' : 'üìã Planned'}
                </div>
                
                <!-- Phase Header -->
                <div class="flex items-center gap-4 mb-6">
                  <div class={`w-16 h-16 bg-${phase.color}-500/20 rounded-full flex items-center justify-center border-2 border-${phase.color}-500/50`}>
                    <span class="text-2xl">{phase.icon}</span>
                  </div>
                  <div>
                    <h3 class={`text-2xl font-bold text-${phase.color}-300 mb-1`}>
                      {phase.title}
                    </h3>
                    <p class="text-sm opacity-70 font-medium">{phase.timeframe}</p>
                  </div>
                </div>
                
                <!-- Description & Commitment -->
                <div class="mb-8">
                  <p class="text-base opacity-90 leading-relaxed mb-4">
                    {phase.description}
                  </p>
                  <p class={`text-sm italic text-${phase.color}-200 border-l-2 border-${phase.color}-500/50 pl-4`}>
                    {phase.commitment}
                  </p>
                </div>
                
                <!-- Key Milestones -->
                <div class="mb-6">
                  <h4 class="text-lg font-semibold mb-4 text-white">Key Milestones</h4>
                  <div class="space-y-3">
                    {phase.milestones.map((milestone) => (
                      <div class="flex items-start gap-3">
                        <div class={`w-2 h-2 bg-${phase.color}-400 rounded-full mt-2 flex-shrink-0`}></div>
                        <div>
                          <div class="font-medium text-white text-sm">{milestone.title}</div>
                          <div class="text-xs opacity-70 mt-1">{milestone.description}</div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
                
                <!-- Funding & Transparency Info -->
                <div class="pt-6 border-t border-gray-700/30">
                  <div class="grid grid-cols-1 gap-4 text-sm">
                    <div>
                      <span class="font-medium text-green-300">Funding Target:</span>
                      <span class="opacity-80 ml-2">{phase.funding}</span>
                    </div>
                    <div>
                      <span class="font-medium text-blue-300">Transparency:</span>
                      <span class="opacity-80 ml-2">{phase.transparency}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Visual Element (alternating sides) -->
            <div class={`${index % 2 === 0 ? 'md:pl-12' : 'md:pr-12 md:col-start-1 md:row-start-1'} hidden md:block`}>
              <div class={`w-full h-64 bg-gradient-to-br from-${phase.color}-500/10 to-${phase.color}-600/5 rounded-lg border border-${phase.color}-500/20 flex items-center justify-center group-hover:border-${phase.color}-400/40 transition-all duration-500`}>
                <div class={`text-6xl opacity-40 group-hover:opacity-60 group-hover:scale-110 transition-all duration-500`}>
                  {phase.icon}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Footer - Personal Note & CTA -->
    <div class="mt-20 pt-12 border-t border-gray-700/30">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gradient-to-r from-gray-800/50 to-gray-900/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/30">
          <h3 class="text-2xl font-bold mb-6 text-white">The Promise</h3>
          <p class="text-lg opacity-90 mb-6 leading-relaxed">
            {roadmap.footer.personalNote}
          </p>
          <p class="text-base opacity-80 mb-8 leading-relaxed">
            {roadmap.footer.commitment}
          </p>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href={roadmap.footer.actionLink} class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-3 px-8 rounded-xl transition-all duration-200 shadow-xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-black">
              {roadmap.footer.actionText}
            </a>
            <a href="https://github.com/impliedDistraction" target="_blank" rel="noopener" class="inline-block bg-gray-800 hover:bg-gray-700 text-white px-8 py-3 rounded-xl shadow transition-all duration-200 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-black">
              View Progress on GitHub
            </a>
          </div>
          
          <p class="text-xs opacity-50 mt-8">
            This roadmap is a living document. As we hit milestones and learn, it evolves ‚Äî but the mission remains constant.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
