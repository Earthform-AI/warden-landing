---
import { SponsorDashboard } from '../components/SponsorDashboard.tsx';
import { meta } from '../site.config';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Sponsor Dashboard - {meta.title}</title>
    <meta name="description" content="Select and sponsor applicants for AI tools access" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    
    <!-- Open Graph -->
    <meta property="og:title" content="Sponsor Dashboard - Warden" />
    <meta property="og:description" content="Select and sponsor applicants for AI tools access" />
    <meta property="og:type" content="website" />
    
    <Analytics />
    <SpeedInsights />
  </head>
  
  <body class="bg-black text-white">
    <div class="min-h-screen bg-black">
      <SponsorDashboard sponsorEmail="test@example.com" client:load />
      
      <div class="max-w-4xl mx-auto px-4 py-8 text-center text-gray-400">
        <p class="text-sm">
          This is a demo dashboard. In production, sponsor email would be determined by authentication.
        </p>
      </div>
    </div>
  </body>
</html>