---
import { TestimonialSubmissionForm } from '../components/TestimonialSubmissionForm.tsx';
import { meta } from '../site.config';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Submit Your AI Impact Story - {meta.title}</title>
    <meta name="description" content="Share how AI tools have amplified your positive impact. Help us build authentic testimonials with measurable outcomes." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    
    <!-- Open Graph -->
    <meta property="og:title" content="Submit Your AI Impact Story - Warden" />
    <meta property="og:description" content="Share how AI tools have amplified your positive impact. Help us build authentic testimonials with measurable outcomes." />
    <meta property="og:type" content="website" />
    
    <Analytics />
    <SpeedInsights />
  </head>
  
  <body class="bg-black text-white min-h-screen">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm border-b border-gray-800">
      <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-white hover:text-blue-400 transition-colors">
          Warden
        </a>
        <div class="flex items-center gap-6">
          <a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a>
          <a href="/apply" class="text-gray-300 hover:text-white transition-colors">Apply</a>
          <a href="/enhanced-sponsorship" class="text-gray-300 hover:text-white transition-colors">Sponsor</a>
          <a href="/sponsor-dashboard" class="text-gray-300 hover:text-white transition-colors">Dashboard</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 pb-20">
      <!-- Hero Section -->
      <section class="py-20 bg-gradient-to-br from-green-900/20 via-black to-blue-900/20">
        <div class="max-w-6xl mx-auto px-4 text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-900/30 rounded-full text-green-300 text-sm font-medium mb-8">
            üìù Share Your Story
          </div>
          
          <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 bg-clip-text text-transparent">
            Submit Your AI Impact Story
          </h1>
          
          <p class="text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed mb-8">
            Help us move beyond placeholder testimonials. Share how AI tools have genuinely amplified your positive impact with measurable outcomes.
          </p>
          
          <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto text-center mb-12">
            <div class="space-y-2">
              <div class="text-2xl font-bold text-green-400">Verified</div>
              <div class="text-gray-400">All stories are reviewed and verified</div>
            </div>
            <div class="space-y-2">
              <div class="text-2xl font-bold text-blue-400">Authentic</div>
              <div class="text-gray-400">Real people, real projects, real outcomes</div>
            </div>
            <div class="space-y-2">
              <div class="text-2xl font-bold text-purple-400">Impactful</div>
              <div class="text-gray-400">Stories that inspire others to do good</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Submission Form -->
      <section class="py-20">
        <div class="max-w-6xl mx-auto px-4">
          <TestimonialSubmissionForm client:load />
        </div>
      </section>

      <!-- Why We Need Your Story -->
      <section class="py-20 bg-gradient-to-br from-gray-900/50 via-black to-purple-900/20">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-6 text-white">
              Why Your Story Matters
            </h2>
            <p class="text-lg text-gray-300 max-w-3xl mx-auto">
              Authentic impact stories help build trust and inspire others to use AI for good
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div className="space-y-8">
              <div className="bg-red-900/20 border border-red-500/20 rounded-2xl p-6">
                <h3 className="text-xl font-semibold text-red-300 mb-4">‚ùå The Problem with Fake Testimonials</h3>
                <ul className="space-y-3 text-gray-400">
                  <li>‚Ä¢ Generic, unverifiable claims</li>
                  <li>‚Ä¢ No measurable outcomes</li>
                  <li>‚Ä¢ Fictional characters and companies</li>
                  <li>‚Ä¢ Erodes trust in AI programs</li>
                  <li>‚Ä¢ Doesn't inspire real action</li>
                </ul>
              </div>
            </div>

            <div className="space-y-8">
              <div className="bg-green-900/20 border border-green-500/20 rounded-2xl p-6">
                <h3 className="text-xl font-semibold text-green-300 mb-4">‚úÖ The Power of Real Stories</h3>
                <ul className="space-y-3 text-gray-400">
                  <li>‚Ä¢ Verified people and outcomes</li>
                  <li>‚Ä¢ Specific, quantified results</li>
                  <li>‚Ä¢ Trackable projects and impact</li>
                  <li>‚Ä¢ Builds genuine trust</li>
                  <li>‚Ä¢ Inspires others to act</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="mt-16 text-center">
            <div class="bg-blue-900/20 border border-blue-500/20 rounded-2xl p-8 max-w-3xl mx-auto">
              <h3 class="text-2xl font-bold text-white mb-4">Your Impact Helps Others</h3>
              <p class="text-gray-300 leading-relaxed mb-6">
                When you share your authentic AI impact story, you help potential sponsors understand the real value of supporting good actors. Your specific outcomes and measurable results become evidence that these programs create genuine positive change in the world.
              </p>
              <p class="text-blue-300 font-medium">
                Real stories drive real sponsorships, which create more real impact.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Verification Process -->
      <section class="py-20 bg-gradient-to-br from-black via-gray-900 to-blue-900/20">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-6 text-white">
              Our Verification Process
            </h2>
            <p class="text-lg text-gray-300 max-w-3xl mx-auto">
              Every testimonial goes through our verification process to ensure authenticity
            </p>
          </div>

          <div class="grid md:grid-cols-4 gap-8">
            <div class="text-center space-y-4">
              <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center mx-auto text-2xl text-white font-bold">
                1
              </div>
              <h3 class="text-lg font-semibold text-white">Submit Story</h3>
              <p class="text-gray-400 text-sm">Share your impact story with specific details and outcomes</p>
            </div>

            <div class="text-center space-y-4">
              <div class="w-16 h-16 bg-green-600 rounded-2xl flex items-center justify-center mx-auto text-2xl text-white font-bold">
                2
              </div>
              <h3 class="text-lg font-semibold text-white">Initial Review</h3>
              <p class="text-gray-400 text-sm">Our team reviews for completeness and plausibility</p>
            </div>

            <div class="text-center space-y-4">
              <div class="w-16 h-16 bg-purple-600 rounded-2xl flex items-center justify-center mx-auto text-2xl text-white font-bold">
                3
              </div>
              <h3 class="text-lg font-semibold text-white">Verification</h3>
              <p class="text-gray-400 text-sm">We verify details through documentation or brief interviews</p>
            </div>

            <div class="text-center space-y-4">
              <div class="w-16 h-16 bg-orange-600 rounded-2xl flex items-center justify-center mx-auto text-2xl text-white font-bold">
                4
              </div>
              <h3 class="text-lg font-semibold text-white">Publication</h3>
              <p class="text-gray-400 text-sm">Verified stories are featured in our impact showcase</p>
            </div>
          </div>

          <div class="mt-16 text-center">
            <div class="bg-yellow-900/20 border border-yellow-500/20 rounded-lg p-6 max-w-2xl mx-auto">
              <p class="text-yellow-300 text-sm">
                <strong>Timeline:</strong> The verification process typically takes 5-7 business days. We'll contact you if we need additional information or documentation.
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-950 text-gray-400 py-8 text-center text-sm">
      <div class="max-w-6xl mx-auto px-4">
        <p>&copy; 2024 Earthform AI. Building responsible AI systems for a better world.</p>
        <div class="flex justify-center gap-6 mt-4">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
          <a href="/terms" class="hover:text-white transition-colors">Terms</a>
          <a href="mailto:hello@earthform.ai" class="hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>